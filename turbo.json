{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build-packages": {
      "dependsOn": [],
      "outputs": ["packages/*/dist/**"],
      "inputs": ["packages/*/src/**", "packages/*/package.json"]
    },
    "dev": {
      "dependsOn": ["build-packages"],
      "persistent": true,
      "cache": false
    }
  }
}